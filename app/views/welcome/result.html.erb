<h3>貴方へのオススメ！</h3>
  <table class="table">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>画像</th>
      </tr>
    </thead>
    <tbody>
      <% @result_books.each do |result_book_name| %>
        <% book_url = @books.find { |item| item[:name] == result_book_name }.try(:[], :url) %>
        <tr>
          <td><%= result_book_name %></td>
          <td>
            <% if book_url.present? %>
              <%= image_tag(@books.find { |item| item[:name] == result_book_name}[:url], size: '100x100') %>
            <% end %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
  <form action="./result" method="post">
    <button type="submit" class="btn btn-danger">別のオススメを見る</button>
  </form>
  <button onclick="location.href='index.html'" type="button" class="btn btn-danger">データを保存する</button>